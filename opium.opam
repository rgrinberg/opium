depends: [
  "ocaml" {>= "4.04.1"}
  "dune" {>= "1.11"}
  "opium_kernel"
  "cohttp-lwt-unix"
  "lwt"
  "logs"
  "cmdliner"
  "ppx_fields_conv"
  "ppx_sexp_conv"
  "re"
  "magic-mime"
  "stringext"
  "alcotest" {with-test}
]
